.container{
  width: 100%;
  background-color: #F2f2f2;
}
.container2 {
  background-color: #fff;
  min-height: 100%;
  display: block;
}
.content-container {
  width: 100vw;
  height: 100%;
  margin-top: 32rpx;
  display: flex;
}
.status-box{
  width:100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.status-box .status-label{
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size:28rpx;
  color:#353535;
  box-sizing: border-box;
  position: relative;
}
.status-box .status-label.active{
  color:#e64340;
  border-bottom: 6rpx solid #e64340;
}
.no-order{
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #F2f2f2;
}
.no-order-img{
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}
.no-order .text{
  font-size:28rpx;
  color:#999999;
  text-align: center
}
.order-list{
  width: 100%;
}
.order-list .a-order{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.a-order  .goods-info,
.goods-img-container{
  width: 720rpx;
  margin-left: 30rpx;
  border-top: 1rpx solid #eee;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
}
.goods-price {
font-size:26rpx;
width:720rpx;
text-align: right;
margin-bottom:30rpx;
}
.goods-price .p {
font-size:36rpx;
color:#e64340;
}
.goods-info .img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f7f7f7;
}
.goods-info .img-box .goods-img,
.goods-img-container .img-box .goods-img{
  width: 120rpx;
  height: 120rpx;
}
.goods-info  .goods-des{
  font-size:26rpx;
  color:#000000;
}
.goods-img-container{
  height: 180rpx;
  box-sizing: border-box;
  white-space: nowrap;
}
.goods-img-container .img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f7f7f7;
  display: inline-block;
}
.price-box{
  width: 720rpx;
  display: flex;
  flex-direction:row-reverse;
  padding-bottom: 30rpx;
}
.price-box .btn{
  width: 166rpx;
  height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  margin-left: 20rpx;
  font-size:26rpx;
}
.price-box .active{
  border:1px solid #e64340;
  color: #e64340;
}
.remark {
color:#e64340;
margin-bottom: 20rpx;
}
.goods-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
}

.goods-container .title {
  text-align: left;
  padding: 10rpx 30rpx;
  color: #515151;
  font-size: 22rpx;
  line-height: 30rpx;
  background: rgba(216, 30, 6, 0.3);
}

.goods-container .goods {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}
.rest-count{
  color: orange;
}
.goods-container .goods .pic {
  float: left;
  width: 110rpx;
  height: 110rpx;
  margin-right: 25rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
}

.goods-container .goods .fresh-tag {
  position: absolute;
  top: 15rpx;
  right: 25rpx;
  width: 60rpx;
  height: 60rpx;
}


.goods-container .goods .fresh-tag2 {
  position: absolute;
  top: 15rpx;
  right: 20rpx;
  font-size: 28rpx;
  width: 150rpx;
  height: 60rpx;
  color: #d81e06;
  font-weight: bold;
}
.goods-container .goods .name {
  color: #000;
  font-size: 28rpx;
  line-height: 46rpx;
  font-weight: bold;
}

.goods-container .goods .soldInfo {
  display: flex;
  flex-direction: row;
  width: 350rpx;
  align-items: flex-start;
  margin-top: 5rpx;
  padding-top: 10rpx;
}

.goods-container .goods .soldInfo .good-price-box {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-end;
  overflow: hidden;
  font-size: 22rpx;
  line-height: 22rpx;
}

.goods-container .goods .soldInfo .good-price-box .price {
  position: absolute;
  right: 100rpx;
  color: #d81e06;
 
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.goods-container .goods .soldInfo .good-price-box .count {
  margin-top: 5rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}
.task-name{
  font-size: 24rpx;
  color: #888888;
  padding-top: 10rpx;
  padding-bottom: 5rpx;
}
.goods-container .goods .soldInfo .good-sales-box {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-end;
  overflow: hidden;
  font-size: 22rpx;
  line-height: 22rpx;
  padding-top: 10rpx;

}

.goods-container .goods .soldInfo .good-sales-box .number {
  color: #d81e06;
  padding: 2px;

}
.status{
  position: absolute;
  right: 20rpx;
  color: #888888;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 120rpx;
}
.shenhe1{
  right: 50rpx;
}
.shenhe2{
  position: absolute;
  right: 150rpx;
}
.goods-container .goods .soldInfo2 {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: flex-start;
  margin-top: 5rpx;
  padding-top: 10rpx;
}