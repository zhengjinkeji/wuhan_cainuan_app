.goods-container {
	width: 100%;
	background: #fff;
}

.goods-title {
	text-align: center;
	height: 90rpx;
	line-height: 90rpx;
	color: #333;
	font-size: 32rpx;
	display: flex;
	justify-content: center;
}

.goods-title .text {
	display: inline-block;
	margin-left: 10rpx;
	margin-right: 10rpx;
}

.goods-title .line {
	width: 20rpx;
	border-top: 1rpx solid #b4282d;
	margin-top: 45rpx;
	height: 1rpx;
}

.goods-title image {
	width: 36rpx;
	height: 36rpx;
	margin-bottom: -6rpx;
	margin-left: 10rpx;

}

.list-item {
	width: 330rpx;
	height: 480rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}

.list-item image {
	width: 100%;
	height: 330rpx;
	border-radius: 6rpx;
}

.goods-list-title {
	font-size: 30rpx;
	color: #333;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.goods-list-text {
	font-size: 24rpx;
	color: #999;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.goods-list-money {
	font-size: 30rpx;
	color: #ab2b2b;
}

